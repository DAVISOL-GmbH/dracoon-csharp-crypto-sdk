<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2013/05/nuspec.xsd">
  <metadata>
    <!-- The identifier that must be unique within the hosting gallery -->
    <id>Dracoon.Crypto.Sdk</id>

    <title>Davisol.Dracoon Crypto Sdk</title>

    <!-- The package version number that is used when resolving dependencies -->
    <version>2.1.0-alpha</version>

    <!-- Authors contain text that appears directly on the gallery -->
    <authors>dracoon developers</authors>

    <!-- Owners are typically nuget.org identities that allow gallery
            users to easily find other packages by the same owners.  -->
    <owners>dracoon</owners>

    <!-- License and project URLs provide links for the gallery -->
    <license type="expression">	Apache-2.0</license>
    <projectUrl>https://davisol@dev.azure.com/davisol/3rdParty/_git/dracoon-csharp-crypto-sdk</projectUrl>

      
    <!-- The icon is used in Visual Studio's package manager UI -->
    <icon>DracoonCryptoSdk_NugetImage.png</icon>

    <!-- If true, this value prompts the user to accept the license when
            installing the package. -->
    <requireLicenseAcceptance>false</requireLicenseAcceptance>

    <!-- The description can be used in package manager UI. Note that the
            nuget.org gallery uses information you add in the portal. -->
    <description>A library which implements the client-side encryption of Dracoon / with enhancements by DAVISOL GmbH.</description>

    <!-- Copyright information -->
    <copyright>Copyright ©2017 Dracoon GmbH, Copyright ©2021 DAVISOL GmbH</copyright>

    <!-- Tags appear in the gallery and can be used for tag searches -->
    <tags>dracoon crypto cryptography encryption davisol</tags>

    <releaseNotes>Fork of offical Dracoon C# Crypto SDK: https://github.com/dracoon/dracoon-csharp-crypto-sdk</releaseNotes>

    <!-- Dependencies are automatically installed when the package is installed -->
    <dependencies>
      <group targetFramework=".NETFramework4.5.2">
        <dependency id="BouncyCastle" version="1.8.5"/>
      </group>      
    </dependencies>
  </metadata>
  <files>
    <file src="bin\Release\Dracoon.Crypto.Sdk.dll" target="lib\net452\Dracoon.Crypto.Sdk.dll" />
    <file src="bin\Release\Dracoon.Crypto.Sdk.xml" target="lib\net452\Dracoon.Crypto.Sdk.xml" />
    <file src="DracoonCryptoSdk_NugetImage.png" target=""/>
  </files>
</package>